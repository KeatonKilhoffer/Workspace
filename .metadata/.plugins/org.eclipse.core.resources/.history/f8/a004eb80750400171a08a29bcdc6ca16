import java.util.Scanner;

public class CountUppercaseLetters {

	public static void main(String[] args){
		
		//Declare variables.
		double[] array = new double[4];// Stores input
		double sum = 0;//Stores the sum of the data in the array
		double mean = 0;//Stores the average value of the entered data.
		double deviation = 0;
		Scanner input = new Scanner(System.in);
		
		// 1. Prompt user for input.
		System.out.println("Enter ten numbers");
		// 2. Use array to store numbers.
		for (int a = 0; a < array.length; a++){
			array[0] = input.nextDouble();
		}
		for (int a = 0; a < array.length; a++){
			sum = sum + array[a];
		}
		mean = sum/array.length;
		System.out.println(sum);
		System.out.println(mean);
		
		

	}
}
