import java.util.Scanner;
public class Text {

	public static void main(String[] args) {
		/**This program is based upon the problem 6.8 in Chapter 6 of 
		 **Liang's Intro to Java
		 **This program adds a function that will customize both sides
		 **of the table to the user's liking
		 **Props to Oracle Docs for teaching me how to use "writef"
		 **Props to Dr. Jeremy Evert for being an awesome professor
		 **And forcing me to learn writef so as not to make this program
		 **look extremely retarded.
		 **This coding has been done in Eclipse.
		 **The program utilizes the Java language.
		 **God bless America
		 **/
		//Importing scanner to receive the user input
		Scanner input = new Scanner(System.in);

		//Declaring some variables to store user input
		int cmax, cmin, fmax, fmin;

		//This one is for aesthetic purposes
		String none = "#####";

		/*A very lengthy introduction to the user. Why did I do this
		/*to myself...
		 */
		System.out.println("This program will output a personalized table...");
		System.out.println("That shows the conversion of celsius to "
				+ "fahrenheit in one side...");
		System.out.println("and fahrenheit to celsius in another");

		/*Asks the user to input a lot of things that will be important
		 *to personalize their table
		 */
		System.out.print("Insert the upper bounds of the celsius"
				+ " temperatures you want to convert to fahrenheit: ");
		cmax = input.nextInt();
		System.out.print("Insert the lower bounds of the celsius"
				+ " temperatures you want to convert to fahrenheit: ");
		cmin = input.nextInt();
		System.out.print("Insert the upper bounds of the fahrenheit "
				+ "temperatures you want to convert to celsius "
				+ "(must be divisible by 10): ");
		fmax = input.nextInt();

		//If the user cannot follow directions, tell them so.
		if (fmax%10!=0) {
			System.out.println("Invalid input, program terminated");
			System.exit(0);
		}

		System.out.print("Insert the lower bounds of the fahrenheit "
				+ "temperatures you want to convert to celsius "
				+ "(must be divisible by 10): ");
		fmin = input.nextInt();

		//Once again...
		if (fmin%10!=0) {
			System.out.println("Invalid input, program terminated");
			System.exit(0);
		}


		//Insert a random line just to make it slightly better
		System.out.println();

		//Creating two variables for the celsius and fahrenheit
		double celsius, fahrenheit;


		//Printing the header
		System.out.println("   Celsius   Fahrenheit   |  "
				+ " Fahrenheit   Celsius");
		System.out.println("================================"
				+ "=====================");

		/*As long as both of the celsius and fahrenheit does not
		/*hit the range that the user defined, it will continue
		 *to print out the conversion values and stuff
		 */
		for (celsius=cmax, fahrenheit=fmax; 
				celsius>=cmin||fahrenheit>=fmin;
				celsius--, fahrenheit-=10) {
			/*If the celsius part of the table hits rock bottom but
			 *the fahrenheit hasn't, print some pound signs to show
			 *that there is nothing there.
			 */
			if (celsius<cmin) {
				System.out.printf("   %-10s", none);
				System.out.printf("%-13s|", none);
			}

			//Otherwise, print the celsius degrees out
			else {
				System.out.printf("   %-10.0f", celsius); 
				System.out.printf("%-13.1f|", CtoF(celsius));
			}
			//Blank space
			System.out.print("   ");

			/*If the fahrenheit part of the table hits rock bottom but
			 *the celsius hasn't, print some pound signs to show
			 *that there is nothing there.
			 */
			if (fahrenheit<fmin) {
				System.out.printf("%-13s", none);
				System.out.printf("%-12s", none);
			}

			//Otherwise, print the fahrenheit degrees out
			else {
				System.out.printf("%-13.0f", fahrenheit);
				System.out.printf("%-12.2f", FtoC(fahrenheit));
			}

			//Moves down a line
			System.out.println();
		}
	}

	//Custom method to convert celsius to fahrenheit
	public static double CtoF(double celsius) {
		return (9.0 / 5) * celsius + 32;
	}

	//Custom method to convert fahrenheit to celsius
	public static double FtoC (double fahrenheit) {
		return (5.0 / 9) * (fahrenheit - 32);
	}
}