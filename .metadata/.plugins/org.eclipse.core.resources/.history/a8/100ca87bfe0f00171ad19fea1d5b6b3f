
/* Create a Program that simulates the
 * Bean Machine.
 * Program Requirements: Use Methods
 * Program Outline: 
 * 1. When dropped, the bean will have the 
 * opportunity to fall right or left 5 times. 
 * This decision will be made using Math.random 
 * and the number will be limited to 0 and 1.
 * 2. A method is called upon to decide the left
 * and right directions.
 * 
 */
import java.util.Scanner;

public class BeanMachineGame {
	public static void main(String[] args) {

		System.out.println("Welcome to the Bean Machine Game");
		System.out.println("Press 'Enter' to start the simulation");
		Scanner input = new Scanner(System.in);
		input.nextLine();
		
		bin(5);

	}

	public static int bin(int direction ) {
		int number = 0;
		int numberAddition = 0;
		int[][] array = new int[5][5];
		for (int a = 0; a < direction; a++) {
			number = ((int)(Math.random() * 2));
			numberAddition = numberAddition + number;
	

		}
		return numberAddition;
	}
}
